{
    "manifest_version": 3,
    "name": "hide secrets",
    "version": "1.0",
    "description": "Automatically hides secrets in the browser",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_title": "Hide Secrets",
        "default_popup": "popup.html"
    },
    "icons":{
        "128": "hide_secrets_icon.png"
    }
}